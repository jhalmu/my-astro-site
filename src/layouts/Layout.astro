---
export interface Props {
  title: string
}
import Hero from '@components/Hero.astro'
import Navbar from '@components/Navbar.astro'
import '@styles/styles.css'

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='fi'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <Hero />
    <main>
      <slot />
    </main>
  </body>
</html>
